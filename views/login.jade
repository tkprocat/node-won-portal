extends layout

block content
  .container.fluid
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-default
          .panel-heading
            h1 Login
          .panel-body
            form(name="login", action="/login" method="post").form-horizontal
              .form-group
                label.control-label.col-md-4 Username:
                .col-md-6
                  input(type="text" name="username").form-control
              .form-group
                label.control-label.col-md-4 Password:
                .col-md-6
                  input(type="password" name="password").form-control

              .col-md-6.col-md-offset-4
                input(type="submit", value="Login").btn.btn-primary
